<project name="corundum.macro.build-configuration">

  <macrodef name="build-configuration">
    <attribute name="name"/>
    <sequential>
    
      <echo message="Building with @{name} configuration..."/>

      <locate-source/>
      
      <with-target-platform configuration="@{name}">
        <pde-build source="${source.location}" target="${.target.platform}" feature="${root.feature}" build.id="${DSTAMP}"/>
      </with-target-platform>

      <delete file="${build.dir}/${root.feature}-${DSTAMP}.zip"/>
      
    </sequential>
  </macrodef>
  
</project>